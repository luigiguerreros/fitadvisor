			    <span class="itemtipocosto">por <%= f.tipo_costo %></span>
			    <br>
			    <div class="itemaddress"><%= f.address %></div>
			    <div class="opiniones"><%= rand(10) %> Opiniones</div>
			    <div class="rating">
			    <%= image_tag("detalle/fit2_26.png", :class => 'iconotruenodetalle')%>
			    <%= image_tag("detalle/fit2_26.png", :class => 'iconotruenodetalle')%>
			    <%= image_tag("detalle/fit2_26.png", :class => 'iconotruenodetalle')%>
			    <%= image_tag("detalle/fit2_26.png", :class => 'iconotruenodetalle')%>
			    </div>
			  </div> 
			    </div> 
			  <% end %>
    		<hr class="lineafor">
		<% end %>
	<% end %>
</div>