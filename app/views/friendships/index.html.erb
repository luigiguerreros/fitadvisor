			<%= link_to friendships_path, style: "color: black;text-decoration: none;" do %>
			    <div class="media" style="padding-left: 15%;">
			  <div class="media-left media-middle">
			    <%= image_tag("lista/fit2_09.png", :style => 'width: 100px; height: 100px;', :class => 'img-circle')%>
			  </div>
			  <div class="media-body">
			    <h4 class="media-heading textcaja"><strong><%= f.namefit %></strong>
			    <span class="itemespecialidad"><%= f.especialidad %></span> 
