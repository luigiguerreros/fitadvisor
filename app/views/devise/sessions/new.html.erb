<style type="text/css">
.field_upgrade{
  width:500px;
  height: 50px;
  border: 1.5px solid;
  border-left-color: transparent;
  border-right-color: transparent;
  border-top-color: transparent;
}
.field{
  padding: 10px;
}
.entrar{
  width: 550px;
  padding-top: 40px;
}
.field_with_errors {
    @extend .control-group;
    @extend .error;

    display: inline-block;
}
.formulario_registro{
  padding-top: 20px;
}
  
</style>
<center>
  <h2>Iniciar Sesión</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= image_tag "export/fit2_27.png" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Correo electrónico", class: "field_upgrade" %>
      </div>
      <div class="field">
        <%= image_tag "export/fit2_36.png" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "field_upgrade" %>
      </div>

      <div class="actions">
        <%= image_submit_tag("export/fit2_38.png", class: "entrar") %>
      </div>
  <% end %>
  <%= render "devise/shared/links" %>
</center>

