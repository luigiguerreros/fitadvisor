<style type="text/css">
.field_upgrade{
  width:500px;
  height: 50px;
  border: 1.5px solid;
  border-left-color: transparent;
  border-right-color: transparent;
  border-top-color: transparent;
}
.field{
  padding: 10px;
}

.field_with_errors {
    @extend .control-group;
    @extend .error;

    display: inline-block;
}
.formulario_registro{
  padding-top: 20px;
}
.botonbuscar{
            width: 500px;
            height: 40px;
            background-color: #792a7b;
            border: 0;
            color: white;
            font-size: 20px;
            border-radius: 0;
        }
</style>
<center>
	<h2>¿Olvidaste tu password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
        <%= image_tag "export/fit2_27.png" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Correo electrónico", class: "field_upgrade" %>
      </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "botonbuscar" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</center>

