<%= form_for(@fitpartner, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @fitpartner.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@fitpartner.errors.count, "error") %> prohibited this fitpartner from being saved:</h4>

      <ul>
      <% @fitpartner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
   
<!-- Campo de texto oculto es el user_id del sesionado-->
      <%= f.hidden_field :user_id, :value => current_user.id, class: "form-control" %>
      <%= f.hidden_field :namefit, :value => current_user.fullname, class: "form-control" %>

  <div class="form-group">
    <%= f.label 'Categoría', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= select_tag(:categoria, options_for_select([['Seleccionar', 1], ['Fit People'], ['Fit Places'], ['Fit Food'], ['Fit Events']], 1), { class: "field_upgrade form-control" }) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label 'Subcategoria', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= select_tag(:subcategoria, options_for_select([['Seleccionar', 1], ['Nutrición'], ['Gimnasio'], ['Informatica'], ['Laboratorio'], ['Comida']], 1), { class: "field_upgrade form-control" }) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :especialidad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :especialidad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :costo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :costo, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tipo_costo, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :tipo_costo, options_for_select([['Seleccionar'], ['Hora', 'Hora'], ['Día', 'Día'], ['Mes'], ['Año'], ['Ingreso']]), {}, { class: "field_upgrade form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :disponibilidad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :disponibilidad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :descripcion, class: "form-control" %>
    </div>

  </div>
  <div class="form-group">
    <%= f.label 'Dirección', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: "form-control", :placeholder => 'Av.direccion , Distrito, Pais' %>
    </div>
  </div>
 <!-- Campo de texto oculto es latitude del sesionado-->
      <%= f.hidden_field :latitude, class: "form-control" %>
<!-- Campo de texto oculto es longitude del sesionado-->
      <%= f.hidden_field :longitude, class: "form-control" %>
  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Registrarme como fitpartner', class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
<% end %>